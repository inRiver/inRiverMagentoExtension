<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <inriver>
            <import>
                <debug>0</debug>
                <behavior>append</behavior>
                <path_csv>inriver/import/csv</path_csv>
                <inriver_api_key backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
                <maximum_allowed_error>99999</maximum_allowed_error>
                <cleanup_days>30</cleanup_days>
                <maximum_download_retry_attempt>3</maximum_download_retry_attempt>
                <initial_download_retry_sleep>30</initial_download_retry_sleep>
                <maximum_download_images_retry_attempt>3</maximum_download_images_retry_attempt>
                <initial_download_images_retry_sleep>5</initial_download_images_retry_sleep>
                <force_update_status_on_creation>0</force_update_status_on_creation>
            </import>
        </inriver>
    </default>
</config>
